$TTL    {{ soa_ttl }}
@       IN      SOA     {{ ns1 }}.{{ item['name'] }}. {{ zone_admin }}.{{ item['name'] }}. (
                        {{ soa_serial }} ; Serial
                        {{ soa_refresh }} ; Refresh
                        {{ soa_retry }} ; Retry
                        {{ soa_expire }} ; Expire
                        {{ soa_negative_cache_TTL }} ) ; Negative Cache TTL
;

; Name servers
@	IN	NS	{{ ns1 }}.{{ item['name'] }}.

; A records for name servers
{{ ns1 }}	IN	A	{{ ansible_default_ipv4['address'] }}

; Other A records
{{ inventory_hostname }}	IN	A	{{ ansible_default_ipv4['address'] }}
